<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.stage.*?>

<Stage fx:controller="views.CreateObject"
        xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
    <scene>
        <Scene>
            <AnchorPane prefHeight="600.0" prefWidth="400.0" stylesheets="@styles/HighContrast.css">
            <children>
               <BorderPane layoutX="100.0" layoutY="200.0" prefHeight="600.0" prefWidth="400.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                  <top>
                     <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="34.0" prefWidth="290.0" text="New Object" BorderPane.alignment="CENTER" />
                  </top>
                  <center>
                     <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
                        <children>
                           <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                              <VBox.margin>
                                 <Insets top="20.0" />
                              </VBox.margin>
                              <image>
                                 <Image url="@../assets/ahmed.jpg" />
                              </image>
                           </ImageView>
                           <Button mnemonicParsing="false" text="Choose Image">
                              <VBox.margin>
                                 <Insets top="10.0" />
                              </VBox.margin>
                           </Button>
                           <TextField promptText="Type Name">
                              <VBox.margin>
                                 <Insets left="100.0" right="100.0" top="10.0" />
                              </VBox.margin>
                           </TextField>
                           <TextArea prefHeight="150.0" prefWidth="200.0" promptText="Type Description....">
                              <VBox.margin>
                                 <Insets left="50.0" right="50.0" top="20.0" />
                              </VBox.margin>
                           </TextArea>
                           <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
                              <padding>
                                 <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                              </padding>
                              <children>
                                 <Button mnemonicParsing="false" text="Complete" />
                              </children>
                           </HBox>
                        </children>
                     </VBox>
                  </center>
               </BorderPane>
            </children></AnchorPane>
        </Scene>
    </scene>
</Stage>
